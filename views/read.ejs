<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <h1 style="text-align: center;">List of Volunteers</h1>
    <br><br>
        <table border="2" class="table"  width="1000">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Skills</th>
                    <th>Action</th>
                </tr>
               
            </thead>
            <tbody>
                <% formCreate.forEach((t) => { %>
                <tr>
                    <td><%= t.id %></td>
                    <td><%= t.fname %></td>
                    <td><%= t.email %></td>
                    <td><%= t.phone %></td>
                    <td><%= t.skills %></td>
                    <th>
                        <a href="/editform/<%= t.id %>" class="btn btn-primary">Edit</a>
                         ||
                        <a href="/deleteform/<%= t.id %>" class="btn btn-danger">Delete</a>
                    </th>
                </tr>
                <% }); %>
            </tbody>
            
        </table><br><br><br>
       <div style="text-align: center;">
        <a href="/index" class="btn btn-primary">Back to home</a>
       </div>

    </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
